{% extends "layouts/base.njk" %}

{% set bodyClass = "activities" %}

{% block headerScripts %}
    <script>window.location.href = "/learn/activities/#{{ type | slug }}";</script>
{% endblock %}

{% block content %}
<noscript class="[ flow-lg md:flow-xl ]">
    <div class="[ flow-md ]">
    {% if activities.length %}
        <div class="[ grid ]">
        {% for item in activities %}
            {% include "partials/components/card--activity.njk" %}
        {% endfor %}
        </div>
        {% if pagination.pages.length > 1 %}
        {% include "partials/components/pagination.njk" %}
        {% endif %}
    {% else %}
        <p>No {{ type }} activities found.</p>
    {% endif %}
    </div>
</noscript>
{% endblock %}
