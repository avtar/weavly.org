                <p class="metadata">{{ item.data.type }} &middot; {{ item.data.experience }} &middot; {{ item.data.subject }}</p>
                {% if item.data.description %}
                <p>{{ item.data.description | safe }}</p>
            {% endif %}
            </div>
        </article>
    {% endfor %}
    </div>
    <p><a href="/learn/activities/on-screen/">See more on-screen activities</a></p>
    {% else %}
    <p>No activities found.</p>
    {% endif %}
    <h2 id="hybrid">Hybrid Activities</h2>
    {% if collections.onscreenActivities.length %}
    <div class="grid gap-6 my-12 activities md:grid-cols-2">
    {% for item in collections.hybridActivities | limit(2) %}
        <article class="relative border border-black card entry focus-within:ring-2">
            {% svgPlaceholder "570", "393" %}
