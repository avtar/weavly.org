{% extends "layouts/base.njk" %}

{% set bodyClass = "events" %}

{% block content %}
<div id="events"></div>
<noscript class="[ flow ] [ flow-md ]">
{% if events.length %}
    {% for item in events | reverse %}
        <article class="[ event ] [ two:three ]">
            <div class="[ three:two__three ]">
                {% svgPlaceholder "570", "380" %}
            </div>
            <div class="[ three:two__two ] [ flow ]">
                <h2>{{ item.data.title }}</h2>
                <p class="[ metadata ]"><span class="[ category ]">{{ item.data.category }}</span> &middot; <span class="[ date ]" itemprop="startDate" content="{{ item.data.date | isoDate }}">{{ item.data.date | formatDate }}</span></p>
                {% if item.data.description %}
                <p>{{ item.data.description | safe }}</p>
                {% endif %}
                <p><a href="{{ item.data.link }}">Visit website<span class="[ visually-hidden ]"> for &ldquo;{{ item.data.title }}&rdquo;</span></a></p>
            </div>
        </article>
    {% endfor %}
    {% if pagination.pages.length > 1 %}
    {% include "partials/components/pagination.njk" %}
    {% endif %}
{% else %}
<p>No events found.</p>
{% endif %}
</noscript>
<script type="module" src="/assets/scripts/events.module.js"></script>
{% endblock %}
