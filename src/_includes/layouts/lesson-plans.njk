{% extends "layouts/base.njk" %}

{% set bodyClass = "lesson-plans" %}

{% block content %}
<div id="lesson-plans"></div>
<noscript class="[ flow-lg md:flow-xl ]">
{% if lessonPlans.length %}
    <div class="[ grid ]">
    {% for item in lessonPlans %}
        {% include "partials/components/card--lesson-plan.njk" %}
    {% endfor %}
    </div>
    {% if pagination.pages.length > 1 %}
    {% include "partials/components/pagination.njk" %}
    {% endif %}
{% endif %}
</noscript>
<script type="module" src="/assets/scripts/lessonPlans.module.js"></script>
{% endblock %}
