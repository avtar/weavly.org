{% extends "layouts/base.njk" %}

{% set bodyClass = "projects" %}

{% block content %}
{% if projects.length %}
    {% for item in projects %}
        <article class="entry">
            <h2>{{ item.data.title }}</h2>
            <p class="metadata"><span class="category">{{ item.data.category }}</span></p>
            {% if item.data.description %}
            <p>{{ item.data.description | safe }}</p>
            {% endif %}
            <p><a href="{{ item.data.link }}">Visit website<span class="sr-only"> for &ldquo;{{ item.data.title }}&rdquo;</span></a></p>
        </article>
    {% endfor %}
{% endif %}
{% endblock %}
