    <p class="metadata">By <span class="author">{{ author if author else "the Coding to Learn and Create Team" }}</span> &middot; Posted <time datetime="{{ date | isoDate }}" class="dt-published">{{ date | formatDate }}</time></p>
{% endblock %}

{% block content %}
    {{ content | safe }}
{% endblock %}
