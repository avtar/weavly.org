{% extends "layouts/base.njk" %}

{% set bodyClass = "resource" %}

{% block pageHeader %}
    <h1>{{ title }}</h1>
    <p class="metadata">{% if author %}By <span class="author">{{ author }}</span> &middot; {% endif %}Posted <time datetime="{{ date | isoDate }}" class="dt-published">{{ date | formatDate }}</time></p>
{% endblock %}

{% block content %}
    <div class="max-w-prose">
    {{ content | safe }}
    </div>
{% endblock %}
